<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="person">
		<name>James McClain</name>
		<email>jmcclain2020@protonmail.com</email>
	</maintainer>
	<longdescription lang="en">
		XMRig High performance, open source, cross platform RandomX,
		CryptoNight, KawPow, AstroBWT, and Argon2 CPU/GPU miner.
	</longdescription>
	<use>
		<flag name="daemon">
			Enable openrc daemon.
		</flag>
		<flag name="donate">
			Set the default donation level to 1% instead of 0
		</flag>
		<flag name="cuda">
			Enable CUDA backend
		</flag>
		<flag name="nvml">
			Enable (NVIDIA Management Library) support (Requires CUDA)
		</flag>
		<flag name="opencl">
			Enable OpenCL backend
		</flag>
	</use>
	<upstream>
		<remote-id type="github">xmrig/xmrig</remote-id>
	</upstream>
</pkgmetadata>
